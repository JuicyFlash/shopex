<div class="container sign-up my-3">
  <div class="col-lg-4 offset-1">
    <div class="row my-3">
      <h2 class="w-auto">
        <%= t('user_sessions.login') %>
      </h2>
    </div>
    <div class="row  justify-content-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field email-field">
          <%= f.label t('user_sessions.email') %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
        </div>
        <div class="field password-field">
          <%= f.label t('user_sessions.password') %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label t('user_sessions.remember') %>
          </div>
        <% end %>
        <div class="actions login-action">
          <%= f.submit t('user_sessions.login') %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
